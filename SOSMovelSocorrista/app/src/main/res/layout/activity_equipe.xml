<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Equipe">

    <TextView
        android:id="@+id/Equipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Equipe"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnEqRegulacao"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/regulacao_apagado" />

    <ImageButton
        android:id="@+id/btnEqSinaisVitais"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnEqRegulacao"
        app:layout_constraintStart_toEndOf="@+id/btnEqRegulacao"
        app:srcCompat="@drawable/sinais_vitais_apagado" />

    <ImageButton
        android:id="@+id/btnEqAndamento"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnEqSinaisVitais"
        app:layout_constraintStart_toEndOf="@+id/btnEqSinaisVitais"
        app:srcCompat="@drawable/andamento_apagado" />

    <ImageButton
        android:id="@+id/btnEqEquipe"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnEqAndamento"
        app:layout_constraintStart_toEndOf="@+id/btnEqAndamento"
        app:srcCompat="@drawable/equipe_selecionado" />

    <ImageButton
        android:id="@+id/btnEqMapa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnEqEquipe"
        app:layout_constraintStart_toEndOf="@+id/btnEqEquipe"
        app:srcCompat="@drawable/mapa_apagado" />

    <EditText
        android:id="@+id/entradaCpf"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConfirmeCpf"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Confirmar CPF"
        app:layout_constraintBottom_toBottomOf="@+id/entradaCpf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entradaCpf"
        app:layout_constraintTop_toTopOf="@+id/entradaCpf" />

</android.support.constraint.ConstraintLayout>