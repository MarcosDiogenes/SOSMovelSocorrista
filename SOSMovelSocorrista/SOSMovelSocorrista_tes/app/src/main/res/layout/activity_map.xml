<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map">

    <TextView
        android:id="@+id/txtLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Localização"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnMapRegulacao"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/regulacao_apagado" />

    <ImageButton
        android:id="@+id/btnMapSinaisVitais"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnMapRegulacao"
        app:layout_constraintStart_toEndOf="@+id/btnMapRegulacao"
        app:srcCompat="@drawable/sinais_vitais_apagado" />

    <ImageButton
        android:id="@+id/btnMapAndamento"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnMapSinaisVitais"
        app:layout_constraintStart_toEndOf="@+id/btnMapSinaisVitais"
        app:srcCompat="@drawable/andamento_apagado" />

    <ImageButton
        android:id="@+id/btnMapEquipe"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnMapAndamento"
        app:layout_constraintStart_toEndOf="@+id/btnMapAndamento"
        app:srcCompat="@drawable/equipe_apagado" />

    <ImageButton
        android:id="@+id/btnMapMapa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/btnMapEquipe"
        app:layout_constraintStart_toEndOf="@+id/btnMapEquipe"
        app:srcCompat="@drawable/mapa_selecionado" />
</android.support.constraint.ConstraintLayout>